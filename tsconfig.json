{
  "compilerOptions": {
    "target": "es5",
    "module": "ES2015",
    "lib": [
      "ES2015",
      "DOM"
    ],
    "jsx": "react-jsx",
    "declaration": true,
    "outDir": "lib",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["src/**/*.tsx"],
  "exclude": ["node_modules"]
}
